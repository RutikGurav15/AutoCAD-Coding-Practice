<Window x:Class="AutoCAD_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCAD_Project"
        mc:Ignorable="d"
        Title="AutoCAD Drawing Analyzer" Height="450" Width="800"
        FontFamily="Segoe UI">
    <DockPanel Background="#e8eef5" LastChildFill="True">
        <!-- Main Grid for Panels -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Border Background="#1f1f2e" Padding="15" CornerRadius="8">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">

                        <!-- Header -->
                        <TextBlock Text="Navigation"
                       Foreground="#E0E0E0"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0 0 0 15"
                       HorizontalAlignment="Left"/>

                        <!-- Block Counter Button -->
                        <Button Name="BlockCounterBtn"
                    Content="🧱  Block Counter"
                    Background="#3a3d5c"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Height="32"
                    HorizontalAlignment="Stretch"
                    Padding="4 0 60 0"
                    Cursor="Hand"
                    BorderBrush="#505070"
                    BorderThickness="1"
                    ToolTip="Displays the count of each block in model space"
                    Click="BlockCounterBtn_Click"
                    Margin="0 4 0 0"
                    HorizontalContentAlignment="Left"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>




                        <!-- Layer Cleaner Button -->
                        <Button Name="LayerCleanerBtn"
        Content="🧹  Layer Cleaner"
        Background="#3a3d5c"
        Foreground="White"
        FontWeight="SemiBold"
        FontSize="14"
        Height="32"
        HorizontalAlignment="Stretch"
        Padding="4 0 60 0"
        Cursor="Hand"
        BorderBrush="#505070"
        BorderThickness="1"
        ToolTip="Displays all unused and frozen layers"
        Click="LayerCleanerBtn_Click"
        Margin="0 10 0 0"
        HorizontalContentAlignment="Left"
        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        
                        <Button Name="EntityConverterBtn"
        Content="🧱  Entity Converter"
        Background="#3a3d5c"
        Foreground="White"
        FontWeight="SemiBold"
        FontSize="14"
        Height="32"
        HorizontalAlignment="Stretch"
        Padding="4 0 50 0"
        Cursor="Hand"
        BorderBrush="#505070"
        BorderThickness="1"
        ToolTip="Convert between Text, MText, Line, Polyline, and Blocks"
        Click="EntityConverterBtn_Click"
        Margin="0 10 0 0"
        HorizontalContentAlignment="Left"
        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>





                    </StackPanel>
                </Border>
                
                
                
                
                
                
                
            </ScrollViewer>
            <!-- Right Panel -->
            <ScrollViewer Grid.Column="1" Name="OutputScroll" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Border Padding="20" Background="White" CornerRadius="6">
                    <StackPanel Name="RightPanel">
                        <!-- Dynamic Content Will Be Injected Here -->
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
